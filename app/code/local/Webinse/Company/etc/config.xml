<config>
    <modules>
        <Webinse_Company>
            <version>0.3.0</version>
        </Webinse_Company>
    </modules>
    <global>
        <models>
            <webinse_company>
                <class>Webinse_Company_Model</class>
                <resourceModel>webinse_company_resource</resourceModel>
            </webinse_company>
            <webinse_company_resource>
                <class>Webinse_Company_Model_Resource</class>
                <entities>
                    <company>
                        <table>webinse_company</table>
                    </company>
                    <addresses>
                        <table>webinse_addresses</table>
                    </addresses>
                </entities>
            </webinse_company_resource>
        </models>
        <resources>
            <webinse_company_setup>
                <setup>
                    <module>Webinse_Company</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </webinse_company_setup>
        </resources>
        <blocks>
            <webinse_company>
                <class>Webinse_Company_Block</class>
            </webinse_company>
            <adminhtml>
                <rewrite>
                    <customer_grid>Webinse_Company_Block_Adminhtml_Customer_Grid</customer_grid>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <webinse_company>
                <class>Webinse_Company_Helper</class>
            </webinse_company>
        </helpers>
    </global>
    <frontend>
        <events>
            <customer_save_before>
                <observers>
                    <webinse_storerestriction>
                        <class>webinse_company/observer</class>
                        <method>customerFilter</method>
                    </webinse_storerestriction>
                </observers>
            </customer_save_before>
        </events>
        <routers>
            <company>
                <use>standard</use>
                <args>
                    <module>Webinse_Company</module>
                    <frontName>companyinfo</frontName>
                </args>
            </company>
        </routers>
        <layout>
            <updates>
                <webinse_company module="webinse_company">
                    <file>webinse_company.xml</file>
                </webinse_company>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <webinse_company module="webinse_company">
                    <file>webinse_company.xml</file>
                </webinse_company>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <webinse_company before="Mage_Adminhtml">Webinse_Company_Adminhtml</webinse_company>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>