<layout version="0.1.0">
    <customer_account>        
        <reference name="customer_account_navigation">           
            <action method="addLink" translate="label" module="webinse_company">               
                <name>companyinfo</name>
                <path>company/company/index</path>
                <label>Company Info</label>            
            </action>               
        </reference>              
    </customer_account>
    <company_company_index>
        <update handle="customer_account"/>
        <reference name="content">
            <block type="webinse_company/company" name="company" as="company" template="webinse_company/company.phtml"/>
        </reference>
    </company_company_index>
    <checkout_onepage_index>
        <reference name='checkout.onepage.billing'>
                <action method="setTemplate">
                    <template>webinse_company/billing.phtml</template>
                </action>
        </reference>
        <reference name='checkout.onepage'>
            <block type='webinse_company/shipping' name='checkout.onepage.shipping' as='shipping' template='webinse_company/shipping.phtml'></block>
        </reference>
    </checkout_onepage_index>
</layout>

